<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CardGame" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#86E0EF</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/Button</item>
        <item name="dialogTheme">@style/RoundedCornersDialog</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EquipmentCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_width">96dp</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/light_gray</item>
        <item name="cardElevation">5dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="RoundedCornersDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="dialogCornerRadius">24dp</item>
    </style>
</resources>